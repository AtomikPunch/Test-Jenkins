{
  "name": "cypress-cucumber-project",
  "version": "1.0.0",
  "description": "Cypress project with Cucumber BDD",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "test": "cypress run"
  },
  "dependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^21.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^13.15.0"
  },
  "devDependencies": {
    "cucumber-html-reporter": "^6.0.0"
  },
  "cypress-cucumber-preprocessor": {
    "stepDefinitions": "cypress/support/step_definitions/**/*.js",
    "json": {
      "enabled": true,
      "output": "cypress/reports/json/cucumber-report.json"
    },
    "messages": {
      "enabled": true,
      "output": "cypress/reports/json/cucumber-messages.ndjson"
    },
    "html": {
      "enabled": true,
      "output": "cypress/reports/html/cucumber-report.html"
    }
  }
}
